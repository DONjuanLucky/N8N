# Required environment variables for n8n

# Encryption key for sensitive data (required)
N8N_ENCRYPTION_KEY=your-secure-encryption-key

# Database configuration (PostgreSQL recommended for production)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=
DB_POSTGRESDB_USER=
DB_POSTGRESDB_PASSWORD=

# User management
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=
N8N_SMTP_PORT=587
N8N_SMTP_USER=
N8N_SMTP_PASS=
N8N_SMTP_SENDER=

# Public URL (important for webhooks)
N8N_HOST=your-railway-app.up.railway.app
N8N_PROTOCOL=https
N8N_PORT=5678

# Other settings
NODE_ENV=production
N8N_LOG_LEVEL=info
